@model IEnumerable<Entities.Category>

@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="container">
        @{
            int say = 0;

            foreach (var item in Model)
            {
                {
                    <div class="card col-md-4" style="margin:auto">

                        <!-- Card image -->
                        <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Others/images/43.jpg" alt="Card image cap">

                        <!-- Card content -->
                        <div class="card-body">

                            <!-- Title -->
                            <h4 class="card-title"><a>@item.Category_Name</a></h4>
                            <!-- Text -->
                            <p class="card-text">
                                Some quick example text to build on the card title and make up the bulk of the card's
                                content.
                            </p>
                            <!-- Button -->
                            <a href="#/@item.ID" class="btn btn-primary">Button</a>

                        </div>

                    </div>

                    say++;
                    <script>
                    console.log(@say);
                    </script>
                    if (say % 3 == 0)
                    {
                        <hr />
                        }
                    }

                }
            }
        </div>
</div>